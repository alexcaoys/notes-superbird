pcm_slave.pdm_format {
    pcm "hw:0,0"
    format S32_LE
    channels 4
    rate 48000
}

pcm.pdm {
    type plug
    slave pdm_format
}

pcm.bluetooth { 
    type plug 
    slave.pcm { 
        type bluealsa
        device "XX:XX:XX:XX:XX:XX"
        profile "a2dp"
    } 
    hint { 
        show on 
        description "Bluetooth"
    } 
}

pcm.!default {
    type asym
    playback.pcm {
        type plug
        slave.pcm "bluetooth"
    }
    capture.pcm {
        type plug
        slave.pcm "pdm"
    }
}

